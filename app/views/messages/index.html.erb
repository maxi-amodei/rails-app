<div class="container">
<h2>My messages</h2>
</div>


<div class="container">
  <% @messages.each do |message| %>
    <div class="message-container" id="message-<%= message.id %>">
      <i class="author">
        <span><%= message.user.email %></span>
        <small><%= message.created_at.strftime("%a %b %e at %l:%M%p") %></small>
      </i>
      <p><%= message.content %></p>
    </div>
  <% end %>
</div>

<div class="container">
  <%= simple_form_for @message, remote: true do |f| %>
    <%= f.input :content, label: false, placeholder: "Type your message (max 400 chars)" %>
    <%= f.submit "Agregar tweet", class: "btn btn-primary" %>
  <% end %>

</div>