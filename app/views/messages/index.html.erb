<div class="container">
  <div class="row center">
    <div class="col-xs-12 col-sm-4 col-sm-offset-4">
      <h2 class="pb-4">My messages</h2>
      <%= link_to 'Agregar Tweet', new_message_path, remote: true, class: "btn btn-primary"  %>
      <% @messages.each do |message| %>
        <div class="message-container pt-4" id="message-<%= message.id %>">
          <i class="author">
            <span><%= message.user.email %></span>
            <small><%= message.created_at.strftime("%a %b %e at %l:%M%p") %></small>
          </i>
          <p><%= message.content %></p>
        </div>
      <% end %>

    </div>
  </div> 
</div>
<div class="container">
  <%= @results %>
</div>
<!-- Button trigger modal -->



<!-- Modal -->
<div class="modal fade" id="newModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Add your Message</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= render partial: 'form' %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>